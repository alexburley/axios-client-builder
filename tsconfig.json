{
    "compilerOptions": {
        "target": "es5",
        "module": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "./dist/esm"
    },
    "include": ["./src"],
    "exclude": ["./src/**/*.test.ts", "tmp/**/*"]
}
